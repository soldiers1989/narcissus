<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ih2ome.hardware_service.service.dao.UserMapper">
	
	<select id="getUser" resultType="com.ih2ome.hardware_service.service.model.User">
		select * from user where 1=1
		<choose>
			<when test="id!=null">
				and id=#{id}
			</when>
			<when test="username!=null">
				and username=#{username}
			</when>
			<when test="gender!=null">
				and gender=#{gender}
			</when>
			<when test="age!=null">
				and age=#{age}
			</when>
		</choose>
	</select>

	<insert id="addUser" parameterType="com.ih2ome.hardware_service.service.model.User">
		<selectKey keyProperty="id" resultType="String" order="BEFORE">
			select  replace(uuid(),'-','')   from dual
		</selectKey>
		INSERT INTO user(id,username,password,gender,age)	 VALUES (#{id},#{username},#{password},#{gender},#{age})
	</insert>

	<update id="updateUser" parameterType="com.ih2ome.hardware_service.service.model.User">
		update user
		<trim prefix="set" suffixOverrides=",">
			<if test="username!=null">username=#{username},</if>
			<if test="password!=null">password=#{password},</if>
			<if test="gender!=null">gender=#{gender},</if>
			<if test="age!=null">age=#{age},</if>
		</trim>
		WHERE id=#{id}
	</update>

	<delete id="deleteUser" parameterType="com.ih2ome.hardware_service.service.model.User">
		delete from user where id=#{id}
	</delete>
</mapper>