            <fileNamePattern>${log_dir}/hardware_server/%d{yyyy-MM-dd}_hardware_server.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.ih2ome.hardware_server" level="DEBUG" additivity="false">
        <appender-ref ref="hardware_server"/>
        <!--<appender-ref ref="console"/>-->
    </logger>

    <!-- dao -->
    <appender name="dao" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_dir}/dao_sql/%d{yyyy-MM-dd}_dao_sql.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.ih2ome.hardware_service.service.dao" level="DEBUG" additivity="false">
        <appender-ref ref="dao"/>
        <!--<appender-ref ref="console"/>-->
    </logger>


    <!-- thirdpatry -->
    <!-- com.alibaba.druid -->
    <appender name="druid" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
