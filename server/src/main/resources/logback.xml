    </appender>
    <logger name="com.alibaba.druid" level="DEBUG" additivity="false">
        <appender-ref ref="druid"/>
    </logger>
    <logger name="druid.sql" level="DEBUG" additivity="false">
        <appender-ref ref="druid"/>
        <!--<appender-ref ref="console"/>-->
    </logger>

    <!-- org.apache.http -->
    <appender name="http" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_dir}/http/%d{yyyy-MM-dd}_http.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache.http" level="DEBUG" additivity="false">
        <appender-ref ref="http"/>
        <!--<appender-ref ref="console"/>-->
    </logger>

    <!-- org.mybatis -->
    <appender name="mybatis" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_dir}/mybatis/%d{yyyy-MM-dd}_mybatis.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
