<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.ih2ome.hardware</groupId>
	<artifactId>hardware-server</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>server</name>
	<description>Demo project for Spring Boot</description>

	<parent>
		<groupId>com.ih2ome</groupId>
		<artifactId>narcissus</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<profiles>
		<!--内网本地环境 -->
		<profile>
			<id>local</id>
			<properties>
				<profile.env>local</profile.env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<!--内网测试环境 -->
		<profile>
			<id>local_test</id>
			<properties>
				<profile.env>bmi</profile.env>
			</properties>
		</profile>
		<!--公网测试环境 -->
		<profile>
			<id>company_test</id>
			<properties>
				<profile.env>company_test</profile.env>
			</properties>
		</profile>
		<!--公网测试环境 -->
		<profile>
			<id>company_online</id>
			<properties>
				<profile.env>company_test_27car</profile.env>
			</properties>
		</profile>
	</profiles>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.ih2ome.hardware</groupId>
			<artifactId>hardware-service</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
        <dependency>
            <groupId>com.narcissus.utils</groupId>
            <artifactId>narcissus_common</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>

